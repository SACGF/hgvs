        {
            "name": "Python: FastAPI - chrX",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "FASTA": "pyhgvs/tests/data/chrX.fa",
                "REFGENE": "pyhgvs/tests/data/genes.refGene"
            },
            "args": [
                "pyhgvs.api:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
